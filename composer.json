{
    "name": "filippo-toso/alleantia-sdk",
    "description": "Alleantia IOT Server unofficial PHP SDK",
    "license": "MIT",
    "authors": [
        {
            "name": "Filippo Toso",
            "email": "filippo.toso@creativepark.it"
        }
    ],
    "require": {
        "php": "^8.0 || ^9.0",
        "filippo-toso/api-sdk": "^1.0",
        "php-http/multipart-stream-builder": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "FilippoToso\\Alleantia\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FilippoToso\\Alleantia\\Laravel\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "php-http/curl-client": "^2.2",
        "laminas/laminas-diactoros": "^2.24"
    }
}
